<div class="bg-white shadow-md rounded-lg p-4">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "text-gray-700 font-bold" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:border-blue-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-4 text-gray-700">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-4">
      <%= f.label :password, class: "text-gray-700 font-bold" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:border-blue-500" %>
      <% if @minimum_password_length %>
        <br />
        <em class="text-gray-600"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "text-gray-700 font-bold" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :current_password, class: "text-gray-700 font-bold" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="text-center">
      <%= f.submit "Update", class: "px-4 py-2 bg-blue-500 text-white rounded-full hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
  <% end %>

  <h3 class="mt-4 text-2xl font-semibold text-gray-800">Cancel my account</h3>

  <div class="mt-4 text-gray-700">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "px-4 py-2 bg-red-500 text-white rounded-full hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50" %></div>

  <%= link_to "Back", :back, class: "block mt-4 text-blue-500 hover:underline" %>
</div>
